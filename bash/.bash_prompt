#!/usr/bin/env bash
# =============================================================================
# .bashPrompt - Terminal prompt configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Option 1: Dynamic (portable - uncomment for new machines)
# -----------------------------------------------------------------------------
# PS1="\[\e[0;96m\]\u\[\e[m\]"         # username (cyan)
# PS1+=" "
# PS1+="\[\e[0;94m\]\h\[\e[m\]"        # hostname (blue)
# PS1+=" "
# PS1+="\[\e[0;95m\]\W\[\e[m\]"        # current directory (magenta)
# PS1+=" $ "

# -----------------------------------------------------------------------------
# Option 2: Hardcoded (current machine)
# -----------------------------------------------------------------------------
PS1="\[\e[0;96m\]Sprin\[\e[m\]"        # cyan
PS1+=" "
PS1+="\[\e[0;94m\]MacAir\[\e[m\]"      # blue
PS1+=" "
PS1+="\[\e[0;95m\]\W\[\e[m\]"          # magenta - current directory
PS1+=" $ "

export PS1

# -----------------------------------------------------------------------------
# macOS ls colors
# -----------------------------------------------------------------------------
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

# Linux equivalent (uncomment if on Linux)
# export LS_COLORS='di=1;34:ln=1;35:so=1;31:pi=1;33:ex=1;32:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43'
